:host
    width 100vw
    height 100vh
    position fixed
    top 0
    left 0
    video
        position: fixed;
        top: 50%; left: 50%;
        z-index: 1;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        transform: translate(-50%, -50%);
    .content-holder
        position fixed
        width 100%
        height 100%
        z-index 2
    .hidden.active ~ .intro-top-bar
        display none
    .intro-top-bar
        position: absolute
        background #7fa86C
        top 0
        height 50px
        width 100%
        z-index 3000
        display flex
        -webkit-box-shadow 0 0 10px 0 #000
        box-shadow 0 0 10px 0 #000
        .topbar-details
            background-color #4f7343
            .logo
                height 40px
                margin 5px
                img
                    height 100%
            .topbar-product-name
                text-outlet
                    top 50%
                    transform translateY(-50%)
                    position relative
                    display block
        .topbar-logout
            margin  0 20px 0 auto
            display flex
            a
                color #fff
                display block
                font-size 12px
                font-weight 500
                cursor pointer
                // background #434951
                border-radius 3px
                padding 0.3em .7em
                margin .4em 0 .4em 20px
        .topbar-sync-stat
            margin-top 10px
