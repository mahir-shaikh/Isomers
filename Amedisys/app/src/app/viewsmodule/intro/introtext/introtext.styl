@import '../../../../assets/css/mixins.styl'
@import '../intro.button';

.intro-text-image
    background url("./assets/images/background-full-transparency.png") no-repeat 
    background-size 100% 100%
    position absolute
    top 0
    left 0
    bottom 0
    width 100%
    z-index -1
.intro-text
    height calc(100vh - 120px)
    width 80%
    margin 80px auto 0 auto
    background #fff
    padding 20px
    color #6D747E
    overflow hidden
    &-wrapper
        background-color #fff
        position relative
        overflow hidden
        height calc(100% - 90px)
            
    &-footer
        overflow hidden
        padding-top 20px
        .btn-primary
            border-radius 5px
            // -webkit-box-shadow 0 0 5px 0 #000
            // box-shadow 0 0 5px 0 #000
            text-outlet
                background $primeColor
                color #fff
                padding .5em 1.5em
                &:hover
                &:focus
                &:active
                    background-color #4f7343
                    color #fff
        .btn-alert-txt
            font-weight 600
            font-size 1.6rem
            display block
            text-align left
            color #0093D3

        .btn-details-txt
            font-weight 400
            font-sizes 1.4rem
            display block
            text-align left
            color #0093D3
            
:host
    .nav-tabs
        display -webkit-box
        display -webkit-flex
        display -ms-flexbox
        display flex
        -webkit-flex-wrap wrap
        -ms-flex-wrap wrap
        flex-wrap wrap
        &>li
            webkit-flex-basis: 0;
            -ms-flex-preferred-size: 0;
            flex-basis: 0;
            -webkit-box-flex: 1;
            -webkit-flex-grow: 1;
            -ms-flex-positive: 1;
            flex-grow: 1;
            max-width: 100%;
            margin 0