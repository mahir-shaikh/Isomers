$glossaryGridWidth = 300px

.glossary
    &-search
        width calc(100% - 35px)
        padding 5px
        float left
        border 1px solid #ccc
        &::-ms-clear
            display none
        &-cont
            float right
            width 300px
            padding 0 20px
        &-icon
            float left
            width 30px
            height 32px
            border 1px solid #ccc
            margin 0 0 0 2px
            &:before
                color #6d747e
                position relative
                left 7px
                top 6px
                font-size 1.6rem 
    &-cont
        clear both
    &-alphabets
        text-align center
        border-right 1px solid #ccc
        border-top 1px solid #ccc
        height 50px
        line-height 50px
        cursor pointer
        &-cont
            margin 20px 0 0 0
            width $glossaryGridWidth
            float left
            padding 0 20px
        &:nth-child(4n+1)
            border-left 1px solid #ccc
        &:nth-last-child(-n+4)
            border-bottom 1px solid #ccc
    &-list
        width "calc(100% - %s)" % $glossaryGridWidth
        height calc(100vh - 275px)
        float left
        overflow auto
        padding 0
        margin 20px 0 0 0
        &-content
            margin 0 0 30px 0
            color #6d747e
            &:last-child
                margin 0 0 50px 0
        &-alphabet
            color #80cc28
            margin 0 0 40px 0

.selected
    background-color #80cc28
    color #fff