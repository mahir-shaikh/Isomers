.eor-feedback
    background #f2f2f2
    height 100%
    border-left 6px solid #7ed66e
    position absolute
    width 100%
    float right
    z-index 3
    color #000000

    &-title
        font-weight 600
        font-size 30px
        color #6D747E
        margin 0
        padding 30px 20px 20px
        background-color #FFF
        text-transform uppercase
    &-close
        width 40px
        height 40px
        background-color #6b737c
        border-radius 50%
        right 10px
        top 15px
        float right
        cursor pointer
        position absolute
        z-index 500
        &:before
            font-size 2rem
            position absolute
            width 100%
            top 10px
            text-align center
            color #fff

    &-modal
        background-color alpha(#6D747E, 0.8)
        position absolute
        width 100%
        height 100%
        z-index 2
        display none
    &-modal.modalShow
        display block

    &-icon
        position relative
        float left
        &:before
            color #647d7e
            position absolute
            top 2px

    &-content
        tabset
            ul
                width 33%
                float left

.isHidden
    display none
    
.nav-buttons-container
    margin-left 50rem
    // background #fff
    margin-top 2rem
    display flex
    bottom 0
    left calc(50% - 115px)
    padding 1rem
    position fixed
    .backbutton
      background #4f7345 url("./assets/images/previous.svg") 17px center no-repeat
      height 48px
      width 48px
      border 0
      border-radius 50%
      display block
      background-size 18px
      margin 0 10px
    .nextbutton
        background  #4f7345 url('./assets/images/next.svg') 17px center no-repeat
        height 48px
        width 48px
        border 0
        border-radius 50%
        display block
        background-size 18px
