.resources
    background white
    height 100%
    border-left 6px solid #7ed66e
    position relative
    width 25%
    float right
    z-index 3
    transition width .8s ease
    
    &-title
        font-weight 600
        font-size 32px
        color #80cc28
        margin 0 2rem
        text-transform  uppercase
    &-close
        width 40px
        height 40px
        background-color #6b737c
        border-radius 50%
        right 10px
        top 15px
        float right
        cursor pointer
        position relative
        text-align center
        font-size 1.5em
        padding-top 0.285em
        @media screen and (max-width 1500px)
            right 5px
            top 5px

    &-content
        position relative
        padding 20px 0
        margin 0 2rem
    &-link
        color #333
        cursor pointer
        font-size 18px
        display block
        padding 10px 20px
        &:hover
            text-decoration none

        &-text
            margin 0 0 0 35px

    &-modal
        background-color alpha(#6D747E, 0.8)
        position absolute
        width 100%
        height 100%
        z-index 2
        display none
    &-modal.modalShow
        display block

    &-icon
        position relative
        float left
        &:before
            color #647d7e
            position absolute
            top 2px

    &-guide
        height calc(100vh - 245px)
        overflow-y auto
    
    &-planning
        height calc(100vh - 225px)
        overflow-y auto

    &.expanded
        width 100%
        & ^[0]-links
            width 25%
            float left
        & ^[0]-expansion
            width 75%
            float left
            color #333
            &:after
                display table
                content ''
                clear both