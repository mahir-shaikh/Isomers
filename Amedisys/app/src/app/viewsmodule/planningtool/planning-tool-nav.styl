.planning-tool
    &-title
        height 25%
        
    &-design
        background #fff
        width 100%
        height 44px
        display table
        border-radius 20px
        cursor pointer
        box-shadow 0px 5px 20px 0px rgba(0, 0, 0, 0.2)
        transition background ease-out .4s, box-shadow .4s ease-out
        &:hover
            // background #006eb9
            background #ffffdf
            box-shadow 0px 5px 25px 0px rgba(0, 0, 0, 0.3)
            color #7ba96b 
        &.disabled
            cursor not-allowed
            font-weight 300
            opacity .3
            .planning-tool-nav-icon
                color rgba(255,255,255,.33)
            .planning-tool-nav-link
                pointer-events none
        
    &-nav:nth child(odd)
        padding 0 5px 0 0
    &-nav:nth child(odd)
        padding 0 0 0 5px
    &-nav-link
        margin 0
        display flex
        vertical-align middle
        padding 0 0 0 15px
        color #7ba96b
        &:hover
            text-decoration none
            color #4f7345
            font-weight bold
        text-outlet
            flex 1
            display flex
            align-items center
    &-nav-icon
        right 30px
        position relative
        &:before
            font-size 16px
            line-height 44px

    &-content
        height calc(100% - 44px)

:host-context(.readOnly)
    .planning-tool-title
        cursor not-allowed
        pointer-events none