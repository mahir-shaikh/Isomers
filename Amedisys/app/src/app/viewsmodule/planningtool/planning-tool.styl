@import '../../../../assets/css/mixins.styl'

:host
    display block
.planning-tool
    background white
    height 100%
    &-title
        margin 0
        color #FFF
        padding-bottom 10px
    &-back
        color #FFF
        font-size 13px
        font-weight 400
        cursor pointer
        &-title
            font-family "OpenSans"
            font-size 14px
            width 80%
            display inline-block
        &:before
            position relative
            top 3px
            font-size 1.7rem
            margin 0 10px 0 0
    .left-pane
        height 100%
        background #4f7345
        padding 0
        font-size 18px
        &-header
            text-align left
            position relative
            padding-top 20px
            padding-left 20px
            -webkit-box-shadow inset 0 10px 9px -10px rgba(0,0,0,0.8)
            box-shadow inset 0 10px 9px -10px rgba(0,0,0,0.8)
        &-links
            position relative
            padding-top 30px
            height calc(100% - 275px)
            overflow-x auto
            .readOnly
                cursor not-allowed
                pointer-events none
            p
                margin 20px 0 10px 20px
                text-transform uppercase
                font-weight 500
                color $secondaryColor
        &-link
            padding 0 0 0 20px
            margin 0
            display block
            position relative
            &:hover
                background rgba(255,255,255,.2)
                color #7BA96B
        &-link text-outlet
            cursor pointer
            line-height 1.1
            color #FFF
            background none
            display block
            padding 10px
            position relative
            z-index 1
            transition color ease-out .4s
        &-link
            &.activeTab
                background #fff
                text-outlet 
                    color #4f7345

        &-link.disabled text-outlet
            cursor not-allowed
            color #A8ADB4
            &:hover
                background initial
                color #A8ADB4

        &-bottom-links
            .links
                padding 10px 15px
                background rgba(255,255,255,0.2)
                align-items center
                margin-bottom 10px
                cursor pointer
                display table
                border-top-right-radius 10px
                border-bottom-right-radius 10px
                border solid 3px #fff
                border-left none
                transition background .3s ease-out
                &.active
                    background rgb(123, 169, 107)
                &:hover
                    background rgba(255,255,255,0.4)
                .report-img
                .instruction-img
                .competitor-img
                    height 15px
                    margin-right 10px
    .right-pane
        height 100%
        background #fff
        padding 0
        &-cont
            background #fff
            height 100%
        .market-report
            &-cont
                position absolute
                right 12px
                padding 10px
                color #09b8ef
                cursor pointer
                width 100px
                border-radius 5px
                top 10px
            &-icon
                float left
                margin 0 10px 0 0    
                &:before
                    font-size 2.5rem
            &-text
                font-size 14px
                float left
                line-height 1.5rem
                width 0px
                    
.dashboard-notification
    .modal-content
        top calc(45vh - 66px)
    .notification
        &-dialog.visible
            display block
        &-close
            position absolute
            cursor pointer
            top -15px
            right 3px
            background #555
            border-radius 50%
            width 25px
            height 25px
            color #fff
            line-height 22px
            text-align center
            border 2px solid #fff
            font-size 0.825em
            line-height 21px

@media (max-width: 1024px)
    .planning-tool
        .left-pane
            &-header
                padding-left 20px
            &-title
                font-size 12px
            &-link text-outlet
                padding-left 20px
@media (max-width: 768px)
    .planning-tool
        &-back
            &:before
                margin 0 5px 0 0
        .left-pane
            &-header
                padding-left 15px
            &-title
                font-size 12px
            &-link text-outlet
                padding-left 15px
            &-links
                height calc(100% - 300px)
                
            &-bottom-links
                .links
                    font-size 14px
                    padding 10px 8px
                    .report-img
                    .instruction-img
                    .competitor-img
                        height 13px