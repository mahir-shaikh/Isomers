@import '../../../../assets/css/mixins.styl'

.decisionAccordion
    background-color #66CC33
    margin-top 30px
    border-radius 0px
    height 400px
    overflow-y scroll
    &-style
        padding-top 20px
        padding-bottom 20px
        
.panel
    background $secondaryColor
    &-title
        font-size larger
        a
            text-decoration none
            outline none
        a:hover
            text-decoration none
            outline none
    &-default
        margin-top 30px
        color #4F7345
        &> ^[0]-heading
            color #4F7345
            height 55px
            padding 16px 15px
            border-radius 0px
            background-color inherit
            font-size large
            &+^[0]-collapse
                &> ^[0]-body
                    background-color transparent
                    border none
                    overflow-y auto

.choice
    &-label
        font-size 1.25em
        font-weight bold
        padding 5px
    &-header
        font-size 1.25em
        font-weight bold
        padding 5px
    &-desc
        font-weight 400
        padding 5px