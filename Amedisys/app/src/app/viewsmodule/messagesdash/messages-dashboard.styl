@import '../../../../assets/css/mixins.styl'

.messageDashboard
    color #000000
    padding 1.5em
    height calc(100% - 115px)
    overflow-y auto
    
    &-title-meeting
        font-size 19px
        font-weight 600
        position relative
    &-title-message
        font-size 19px
        font-weight 500
        position relative
    .notification-count
        font-size 9px
        border-radius 50%
        width 20px
        height 20px
        background $primeColor
        display inline-block
        text-align center
        line-height 20px
        color #fff
        position absolute
        box-shadow 0px 5px 10px 1px rgba(0,0,0,0.2)
        top -7px
        left -10px
        
    message-link
        display block
        clear both

    > div
        margin-bottom 20px
