:host
    display inline-block
    width 100%
    height 40px
    background-color #ECECEA
    color #111
    overflow hidden
    @media screen and (max-width 350px)
        height 30px
        line-height 30px

:host(.disabled)
    background-color #6D6E70
    .stepper-button
        pointer-events none
        color #DCDCDC
    
.stepper
    font-size 0.875rem
    & > *
      float left
      display inline-block
      
    .field-value
        width calc(100% - 60px)
        left 30px
        position relative
        text-align center
        overflow hidden
        height 40px
        line-height 40px
        background-color #fff
        color #000
        @media screen and (max-width 350px)
            height 30px
            line-height 30px
        &.negative
            color red
    &-button
        cursor pointer
        display inline-block
        font-size 17px
        width 30px
        height 40px
        line-height 40px
        position absolute
        color #000
        background-color #c2c2c2
        text-align center
        &:hover, &:active
            background-color #9c9c9c
        @media screen and (max-width 350px)
            height 30px
            line-height 30px
    .add
        right 15px
    .subtract
        left 15px
    .hidden
        display none