.intro-page-wrapper
    height calc(100% - 80px)
    flex-direction column
    justify-content space-around
    display -webkit-box
    display -webkit-flex
    display -ms-flexbox
    display flex
    overflow auto
    align-items center
    @media screen and (max-width 768px)
        height calc(100% - 40px)
    @media screen and (max-width 576px)
        justify-content space-between
    @media only screen and (max-device-width 768px) and (orientation landscape)
        justify-content inherit
    .row
        margin 0
    .program-title-container
        width 100%
        white-space normal
        padding-bottom 10px
        text-align center
        calc-outlet
            font-size 3rem
            line-height 3rem
            font-weight 500
            color #FFF
            text-align center
            text-shadow 2px 3px 3px #372a2a
    .dropdown-container
        .language-dropdown,.currency-dropdown, .first-time
            background-color rgba(255,255,255,0.3)
            padding 16px 32px 16px
            .dropdown-heading
                text-shadow 1px 1px 3px #000000
                text-align left
                padding-bottom 8px
                calc-outlet
                    color #ffffff
                    font-size 20px
        .first-time
            text-shadow: 1px 1px 3px #000
            cursor pointer
            calc-outlet
                color #fff
                font-size 1rem
                text-decoration underline
            @media screen and (max-width 576px)
                calc-outlet
                    font-size 0.875rem
            @media screen and (max-width 320px)
                padding 11px 24px 11px
                calc-outlet
                    font-size 0.8125rem
        .language-dropdown
            padding-top 32px
        .legend-container
            background-color #53DA8B
            padding 0
            .legend-text
                padding 8px 32px
                display list-item
                list-style-position inside
            .legend-heading
                padding 8px 32px
                background-color #6ee297
                border 1px solid #7feba6
                text-align center
                // text-align left
                calc-outlet
                    font-weight 400
                    color #282727
                    font-size 0.875rem
    .next-button-container
        justify-content center
        padding 10px
        .next-button
            display inline-block
            width 85px
            height 85px
            text-align center
            line-height 75px
            font-size 4rem
            border 5px solid #FFF
            border-radius 50%
            box-sizing content-box
            cursor pointer
            color #FFF
            &.isFirstTime
                webkit-animation-delay 0.5s
                animation-delay 0.5s
            &:hover
                background-color #006D92
            .fa
                font-weight 500
            &.disabled
                pointer-events none
                border-color #666
                color #666
@media screen and (max-width 767px)
    .intro-page-wrapper
        .program-title-container
            padding 10px 16px 10px 24px
            calc-outlet
                font-size 2rem
                line-height 2rem
                font-weight 400
        .dropdown-container
            .language-dropdown
                padding-top 16px
            .currency-dropdown
                padding: 0 32px 16px
                .dropdown-heading
                    calc-outlet
                        font-size 18px
            .legend-container
                .legend-text
                    padding 4px 32px
                    calc-outlet
                        font-size 14px
        .next-button-container
            .next-button
                width 55px
                height 55px
                line-height 49px
                font-size 3rem
                border 3px solid #ffffff
@media screen and (max-width 350px)
    .intro-page-wrapper
            .program-title-container
                padding 10px
                calc-outlet
                    font-size 1.845rem
                    line-height 1.845rem
            .dropdown-container
                margin 0 auto
                .language-dropdown
                    padding-top 16px
                    .dropdown-heading
                        calc-outlet
                            font-size 1rem
                .currency-dropdown
                    padding: 0rem 32px 16px
                    .dropdown-heading
                        calc-outlet
                            font-size 1rem
                .legend-container
                    .legend-text
                        padding 4px 16px
                        calc-outlet
                            font-size 0.8125rem
            .next-button-container
                .next-button
                    width 55px
                    height 55px
                    line-height 49px
                    font-size 3rem
                    border 3px solid #ffffff