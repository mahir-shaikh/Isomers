:host
    display block
    height 100%
    .input-data-wrapper
        height 100%
        display -webkit-box
        display -webkit-flex
        display -ms-flexbox
        display flex
        flex-direction column
        overflow auto
        -webkit-overflow-scrolling touch
        .reset-button-container
            height 40px
            justify-content space-between
            .path-heading
                background-color rgba(11,12,18,0.8)
                padding-left 10px
                height 40px
                line-height 40px
                calc-outlet
                    color #fff
            .reset-button
                cursor pointer
                font-size 1rem
                z-index 1
                height 40px
                line-height 40px
                text-align center
                background-color #232323
                calc-outlet
                    color #fff
                .reset-icon
                    padding-right 9px
                @media screen and (max-width 576px)
                    .reset-icon img
                        height 14px
                        width 14px
                    calc-outlet
                        font-size 12px
                &:hover, &:active
                    background-color #101010
        .data-wrapper
            height calc(100% - 40px)
            .right-section
                padding 0
                background-color #000
                /*-webkit-clip-path polygon(100% 0, 100% 50%, 100% 100%, 0% 100%, 25% 50%, 0% 0%)
                clip-path polygon(100% 0, 100% 50%, 100% 100%, 0% 100%, 25% 50%, 0% 0%)
                .cliped-image
                    pointer-events none*/
                @media screen and (max-width 992px)
                    display none
            .left-section
                overflow auto
                @media screen and (max-width 576px)
                    padding 0
                .data-row
                    margin 5px 0
                    @media screen and (max-width 576px)
                        margin 5px 0
                    .form-lable
                        margin 5px 0
                        calc-outlet
                            font-weight 500
                            color #000
                            font-size 0.875rem
                            @media screen and (max-width 350px)
                                font-size 0.75rem
                    .application-mode
                        display -webkit-box
                        display -webkit-flex
                        display -ms-flexbox
                        display flex
                        align-items center
                        justify-content center
                        color #000
                        font-weight 500
                        font-size 0.875rem
                        background-color #fff
                        background-clip content-box
                        height 40px
                        line-height 19px
                        @media screen and (max-width 350px)
                            height 35px
                            line-height 19px
                            font-size 0.75rem
                        @media screen and (max-width 576px)
                            line-height 19px
                        .mode
                            padding 0 3px
                            
            .note
                &-row
                    font-size 0.775em
                    margin auto!important
                    margin-bottom 0!important
                    align-self baseline
                &-label
                    padding 10px 15px 5px