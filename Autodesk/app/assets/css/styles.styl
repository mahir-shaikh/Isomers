@import "mixins"
@import "core"
@import "nouislider"

html, body
    min-height 100%
    overflow hidden
body
    background url("../images/AutodeskBg.jpg") no-repeat
    overflow hidden
    background-size cover
    font-size 16px
    font-family "OpenSans"
    line-height 20px
    color #111
    @media screen and (max-width 768px)
        font-size 14px
    @media screen and (max-width 576px)
        font-size 12px
.im-app
    height 100vh
    padding 0
    overflow hidden
    .main
        height 100%
        .row
            margin 0
        .container
            width calc(100% - 30px)
            max-width 960px
            margin-left 15px
            margin-right 15px
            @media screen and (min-width 992px)
                margin auto
                padding 0
            
carousel
    display block
    height 100%
    .carousel
        height 100%
        .carousel-inner
            height 100%
            display -webkit-box
            display -webkit-flex
            display -ms-flexbox
            display flex
            .carousel-item
                height 100%
                &.animating
                    position absolute
                    z-index 1
                    &[class*=slideIn]
                        z-index 2
                .item
                    width calc(100% - 80px)
                    height 100%
                    margin auto
                    background rgba(255,255,255,0.8)
                    @media screen and (max-width 576px)
                        width calc(100% - 30px)
    .carousel-indicators
        bottom -30px
        @media screen and (width 768px)
            bottom -25px
        @media screen and (min-width 769px)
            display none
    .carousel-control
        width 30px
        cursor pointer
        @media screen and (max-width 768px)
            display none
    .carousel-control-next-icon
        background-image url('../images/icons/1next.svg')
    .carousel-control-prev-icon
        background-image url('../images/icons/1pre.svg')
    &.hideIndicators
        .carousel-control,.carousel-indicators
            display none

inputs-component
    carousel
        .carousel-item
            transform translateZ(-56px)
            transition all 2s ease
            &.active
                transform none
            &:nth-child(1), &:nth-child(5)
                .right-section
                    background url('../images/card_1.jpg') no-repeat
                    background-size cover
            &:nth-child(2), &:nth-child(6)
                .right-section
                    background url('../images/card_2.jpg') no-repeat
                    background-size cover
            &:nth-child(3), &:nth-child(7)
                .right-section
                    background url('../images/card_3.jpg') no-repeat
                    background-size cover
            &:nth-child(4), &:nth-child(8)
                .right-section
                    background url('../images/card_4.jpg') no-repeat
                    background-size cover
            

accordion 
    accordion-group
        .card-header
            padding 0px
            height 48px
            display: flex;
            align-items: center;
            background-color #fff
            border none
            .card-title
                margin 5px
                width 100%

