:host
    display block
    height 100%
    overflow auto
    overflow-x hidden
input, select, textarea {
    color #000000
    width 100%
}

textarea:focus, input:focus {
    color #0000ff
}

.scenario-data
    .row
        margin-left 0px
        margin-right 0px
.scenario-decisions
    color #6d6e70
    width 100%
    padding 15px
    padding-top 0px
    background-color rgba(255,255,255,0.8)
    @media screen and (max-width 1300px)
        font-size 0.85em
    [class*="col-"]
        padding 0px
    .base-type
        &-heading
            text-align center
            > text-outlet
                font-weight 500
    .forecast, .market-share-growth
        color #005495 
    .form-lebel
        position relative
        font-size 0.875rem
        & > text-outlet
            display inline-block
            margin-right -4px
            vertical-align middle
        & > text-outlet
            max-width calc(100% - 30px)
            margin-right 2px
            margin-left 6px
        & > my-tooltip
            & .tooltip-icon
                padding-top 1px
    .content-row
        margin 0px
        min-height 30px
        flex-wrap nowrap
        .col-sm-10.row
            padding 0
        &:before, &:after
            display table
            content ''
        &:after
            clear both

    .top-row
        margin-bottom 5px
        .col-sm-2
            text-align center
        .col-sm-10.row
            padding 0
        .metric
            display inline-block
            color #005495
            font-weight 500
            font-size 1rem

    .development-plans
        &-heading
                color #034EA1
                padding-bottom 15px
                font-size 0.875rem
                font-weight 500
                position relative
                width 100%
        &-text
            padding 15px 0 5px
            color #034EA1
            font-weight 500
            font-size 1.125rem
            border-bottom 2px solid #034EA1
            text-outlet
                line-height 35px
                vertical-align text-bottom
                padding-left 5px
                text-transform uppercase
        &-icon
            width 28px
            height 28px
            display inline-block
            background url("../../../../assets/images/icons/DevPlan.svg") no-repeat
            background-size 28px
        .bottom-section
            padding 0px
            margin-top 2px
            .col-sm-3
                text-outlet
                    font-weight 500
            
    .business-valuation
        padding-bottom 15px
        &-heading
                color #034EA1
                padding-bottom 15px
                font-size 0.875rem
                font-weight 500
                position relative
                width 100%
        &-text
            padding 15px 0 5px
            color #034EA1
            font-weight 500
            font-size 1.125rem
            border-bottom 2px solid #034EA1
            text-outlet
                line-height 35px
                vertical-align text-bottom
                padding-left 5px
                text-transform uppercase
        &-icon
            width 28px
            height 28px
            display inline-block
            background url("../../../../assets/images/icons/BusinessVal.svg") no-repeat
            background-size 28px
        .global-decisions
            margin-top 10px
            .metric
                text-align left
                width 100%
                align-self flex-end
            .col-sm-3
                text-outlet
                    font-weight 500
        .regional-decisions        
            .chart-area               
                border 1px solid black
        
.margin-15
    margin-right -15px !important
    
.padding-bottom-15
    padding-bottom 15px
    
.first-row
    .form-lebel
        .data-value-container
            padding-top 10px

.copy-button
    position absolute
    top 0px
    right 0px
    height 45px
    background-color transparent
    cursor pointer
    color #fff
    font-size 14px
    text-transform capitalize
    &:hover
        color #F0F0F0
    
.chart-area
    position relative
    &-heading
        width 100%
        background-color #6d6e70
        color #fff
        padding 5px 15px
        text-align center

.column-chart
    padding 0px
    margin-top 15px
    &-heading
        color #034EA1
        padding-bottom 15px
        font-size 0.875rem
        font-weight 500
        position relative
        width 100%
    &-text
        padding 15px 0 5px
        color #034EA1
        font-weight 500
        font-size 1.125rem
        border-bottom 2px solid #034EA1
        text-outlet
            line-height 25px
            vertical-align text-bottom
            padding-left 5px
            text-transform uppercase
    &-icon
        color #6D6E70
    
.notes-area
    position relative
    width 100%
    height 40px
    font-size 0.875rem
            
.data-value-container
    padding 5px
    height 100%    
            
.form-lebel
    .data-value-container
        display flex

.form-lebel,.research-data,.phase1-data,.phase2-data,
.phase3-data,.region-color-1,.region-color-2,
.region-color-3,.region-color-4,.global-value
    padding 0 2px 0 0 !important
    background-color rgba(255,255,255,0.8)
    background-clip content-box
    
.no-bg
    background none