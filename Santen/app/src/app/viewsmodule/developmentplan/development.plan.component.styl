.development-plan-details
    background url("../../../../assets/images/development-plan-background.jpg") no-repeat
    background-size cover
    background-position center
    height calc(100% - 104px)
    width 100%
    position relative
    overflow auto
    padding 20px 0
    @media screen and (max-width 992px)
        height calc(100% - 134px)
    .project-plan-heading
        &-text
            padding 15px 0
            padding-left 20px
            background linear-gradient(270deg, #00ADEE 0%, #034EA1 91%)
            background -moz-linear-gradient(270deg, #00ADEE 0%, #034EA1 91%)
            background -webkit-linear-gradient(270deg, #00ADEE 0%, #034EA1 91%)
            background -o-linear-gradient(270deg, #00ADEE 0%, #034EA1 91%)
            margin 0
            color #FFF
    .scientific-background,
    .alignment-and-planning        
        background-color rgba(255,255,255,0.8)
        .row,
        .plan-detail-row-data,
        .plan-detail-row-data-content
            width 100%
            margin 0px
        .plan-details
            padding 0
        .plan-detail-row
            margin-top 20px
            padding 0 15px
            [class*="col-"]
                padding 0px
            &-heading
                color #034EA1
                padding-bottom 15px
                font-size 0.9375rem
                font-weight 500
                position relative
                padding-right 130px
                notes
                    font-size 1rem
            &-data
                font-size 0.875rem
                font-weight 500
                &-content
                    .metric-selection,
                    .assumption-col
                        padding-left 10px
                        &:first-child
                            padding-left 0
                    .metric-selection
                        &-data
                            padding-left 10px
                            height 35px
                            line-height 35px
                            border 1px solid #6d6e70
        &-text
            padding 15px 0 5px
            color #034EA1
            font-weight 500
            font-size 1.125rem
            border-bottom 2px solid #034EA1
            text-outlet
                line-height 35px
                vertical-align text-bottom
                padding-left 5px
        &-icon
            width 28px
            height 28px
            display inline-block
            background url("../../../../assets/images/icons/Plan&Align.svg") no-repeat
            background-size 28px
        &-content
            margin 0
            & > .row
                margin 5px
    .scientific-background
        padding 0 20px
        &-text
            margin-top 0
        &-icon
            background url("../../../../assets/images/icons/ScientificBkg.svg") no-repeat
            background-size 28px
        .plan-details-container
            padding 0
    .alignment-and-planning
        .plan-detail-row
            padding 20px 20px
            margin-top 0
        &-text
            margin-left 20px
            margin-right 20px
        .down-arrow
            &-icon
                padding 0
                text-align center
            &-bg
                background url("../../../../assets/images/icons/downArrow.svg") no-repeat
                background-size 35px
                height 35px
                width 35px
                display inline-block
                opacity 0.7
    textareabox
        height 100%
        width 100%
        color #000