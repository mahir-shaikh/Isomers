@import "mixins"
@import "core"
@import "nouislider"


html, body
    min-height 100%
body 
    background url("../images/landing-background.jpg") no-repeat
    color #6D6E70
    overflow-x hidden
    background-size cover
    font-size 16px
    font-family "OpenSans"
    line-height 20px
    
.im-app.container-fluid
    height 100vh
    padding 0
    .main
        height 100%

