        font-weight 600
        
.light-grey-heading
    color #F0F0F0
    &-bold
        color #F0F0F0
        font-weight 600
    
.nav-tabs
    height 45px
    background linear-gradient(#00ADEE, #034EA1)
    border-bottom 0px
    .nav-item
        margin-bottom 0px
        &:hover
            background-color #00ADEF
    .nav-item.active
        background-color #00ADEF
        &:after
            content ''
            width 0px
            height 0px
            border-left 10px solid transparent
            border-right 10px solid transparent
            border-top 10px solid #00ADEF
            position relative
            top 10px
            left 46px
            z-index 1
    .nav-link
        color #fff
        height 100%
        padding-top 10px
        &:hover
            border 1px solid transparent
    .nav-link.active
        color #fff
        background-color #00ADEF
        border 0px solid
        
