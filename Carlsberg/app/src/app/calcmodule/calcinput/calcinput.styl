.planningTool
    input
        width 100%
        max-width 96px
input
    background-color #E6EDE1
    border 1px solid #D9D9D9
    width 100% 
    padding 2px 10px
    border-radius 0
    text-align left
    font-size 0.875rem
    color #111
    text-align center
    overflow hidden
    @media screen and (max-width 1024px)
        font-size 0.75rem
    &:active,&:focus
        outline none
        background-color #003f11
        color #fff
        
:host(.disabled)
    input
        background-color #6D6E70
        color #fff
        pointer-events none
        
:host-context(.intro-section){
    input{
        text-align left
    }
}
:host-context(.inputs-container .field){
    input{
        background-color transparent
        font-size 6.5625rem
        border-width 0
        color #fff
        padding 0
        border 5px #b8a177 solid
        height 180px
    }
    input:active,input:focus{
        border 5px #e8c689 solid
    }
}
:host-context(.team-name-input){
    input{
        background-color transparent
        border-width 0
        color #fff
        border 5px #b8a177 solid
    }
    input:active,input:focus{
        border 5px #e8c689 solid
    }

}