.decision-summary-data-wrapper
    height calc(100% - 270px)
    overflow auto
    font-size 0.875rem
    justify-content center
    background-color rgba(255,255,255,0.8)
    margin 0px
    @media screen and (max-width 1024px)
        font-size 0.75rem
    .row
        margin 0    
    table
        margin 0        
        td,th
            padding 0
            border none
        th
            font-weight 600
            text-align center
     .table-container
        background-color rgba(255,255,255,1)
        padding 10px
        background-clip content-box
        tr:last-child
            padding-bottom 10px
        .row 
            padding-right 10px
        .heading-row
            color #052800
            font-weight 600
            font-size 1rem
            padding-top 5px
            .data-label
                font-weight 600
                padding 5px
                background-clip border-box
                border 1px solid #FFF
                text-outlet
                    font-size 0.875rem
        .sub-heading-row
            .data-label
                padding 5px
                padding-left 15px
                color #1EA345
                font-weight 600
                background-clip border-box
                border 1px solid #FFF
            .data-value
                font-weight 600
                background-clip border-box
                border 1px solid #FFF
                text-align center
                background-color #F4F4F4
                text-outlet, calc-outlet
                    height 100%
                    display inline-flex
                    align-items center
        .data-row
            .data-label
                font-weight 500
                padding-left 15px
                text-outlet
                    height 100%
                    display inline-flex
                    align-items center
            .data-value
                text-align center
                background-color #F4F4F4
                padding 5px
                background-clip border-box  
                border 1px solid #FFF
        .info-row
            .info-text
                text-align right
                font-size 12px
                color #1EA345