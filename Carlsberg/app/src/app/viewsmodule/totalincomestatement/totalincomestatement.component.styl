.income-statement-page-wrapper
    height calc(100% - 251px)
    overflow auto
    font-size 0.875rem
    justify-content center
    background-color rgba(255,255,255,0.8)
    margin 0px;
    @media screen and (max-width 1024px)
        font-size 0.75rem

    .row
        margin 0
    
    table
        margin 0
        
        td,th
            padding 0
            border none
        th
            font-weight 500
            text-align center
    
    .income-statement-heading-container
        justify-content center
        background-color rgba(255,255,255,1)
    
        .income-statement-heading
            background-color #E6EDE1
            box-shadow 3px 3px 10px 0px
            margin 15px 0
            padding 10px
    
            &-text
                display block
                text-align center
                font-size 1.25rem
                color #032904
                height 30px
                line-height 30px
                font-weight 500
    
    .income-statement-body
        .table-container
            background-color rgba(255,255,255,1)
            padding 10px
            background-clip content-box
            tr:last-child
                padding-bottom 10px;
            .row 
                padding-right 10px;
            .heading-row
                color #052800
                font-weight 500
                font-size 1rem
                padding-top 5px
    
                .data-label
                    font-weight 500
                    padding 5px
                    background-clip border-box
                    border 1px solid #FFF
                    text-outlet
                        font-size 0.875rem

    
            .sub-heading-row
                .data-label
                    padding 5px
                    padding-left 15px
                    color #1EA345
                    font-weight 500
                    background-clip border-box
                    border 1px solid #FFF


                .data-value
                    font-weight 500
                    background-clip border-box
                    border 1px solid #FFF
                    text-align center
                    background-color #F4F4F4
                    text-outlet, calc-outlet
                        height: 100%;
                        display: inline-flex;
                        align-items: center;



            
            .highlight-row
                color #1EA345
            
                .data-value
                    font-weight 500
                    text-align center
                    background-color #E8F2E6
                    padding 5px
                    background-clip border-box
                    border 1px solid #FFF
    
            .data-row
                .data-label
                    font-weight 500
                    padding-left 15px
                    text-outlet
                        height: 100%;
                        display: inline-flex;
                        align-items: center;
    
                .data-value
                    text-align center
                    background-color #F4F4F4
                    padding 5px
                    background-clip border-box  
                    border 1px solid #FFF      
    
            .total-row
                .data-label
                    font-weight 600
    
                .data-value
                    background-color #E4E0DF
    
            .last-row
                margin-bottom 20px
    
            .final-row
                margin 0
    
                .data-label
                    font-weight 600
                    color #000
                    padding-left 0
                    
            .info-row
                .info-text
                    text-align right
                    font-size 12px
                    color #1EA345