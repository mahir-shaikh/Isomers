.assortement-analysis-wrapper
    font-size 0.875rem
    @media screen and (max-width 1024px)
        font-size 0.75rem
    .row
        margin 0
    table
        margin 0
        td,th
            padding 2px 10px
            border none
    .reports-container
        .chart-container
            padding 15px
            flex-direction column
            .chart-heading
                color #003F11
                font-size 1rem
                font-weight 500
                padding 10px
                background-color #fff
                border-bottom: 1px solid rgba(0,63,17,0.8) 

    .table-container
        margin auto
        padding-bottom 15px
        .table-heading
            font-size 1.125rem
            font-weight 500
            color #003f11

            padding-bottom 10px
            padding-top 10px
            background-color #e2e0e0
        table
            border 1px solid
        .light-bg
            background-color #F4F4F4
        .dark-bg
            background-color #E6E0E0
        .heading-row
            color #052800
            font-weight 500
            font-size 1rem
            .data-label
                text-align center
                border-left 1px solid
        .sub-heading-row
            border-top 1px solid
            .col-sm
                border-left 1px solid
            .data-label
                color #1EA345
                font-weight 500
                border-left none
        .data-row
            .data-label
                font-weight 500
                text-align left
            .data-value
                font-weight 500
                border-left 1px solid
                display -webkit-box
                display -webkit-flex
                display -ms-flexbox
                display flex
                justify-content space-around