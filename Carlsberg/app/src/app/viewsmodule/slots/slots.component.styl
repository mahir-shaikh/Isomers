.slots-wrapper
    .row
        margin 0
    .slot-heading
        padding 15px
        padding-bottom 0
        justify-content space-between
        .slot-heading-text
            display inline-block
            font-weight 500
            color #032904
            padding 5px
            font-size 1.125rem
    .slot-btn-container
        .add-slot-btn
        .remove-slot-btn
            display inline-block
            padding 5px
            font-size 0.75rem
            cursor pointer
            &.disable-button
                cursor default
                color #9e9e9e
        .add-slot-btn.disabled,remove-slot-btn.disabled
            cursor not-allowed
            pointer-events none
        .add-slot-btn
            .btn-icon
                color #1EA345
            &.disable-button
                .btn-icon
                    color #9e9e9e
        .remove-slot-btn
            .btn-icon
                color #DC1636
            &.disable-button
                .btn-icon
                    color #9e9e9e
    .slot-data
        padding 15px
        padding-top 0
        background-color #fff
        background-clip content-box
        .image-logo
            width 100%
            max-width 90px
        .heading-row
            flex-wrap nowrap
            color #032904
            font-weight 500
            border-bottom 1px solid #E0DEDF
            padding-top 15px
            .data-column
                font-size 0.875rem
                min-width 69px
                padding 0 5px
                text-align center
                display: flex;
                justify-content: center;
                align-items: center;
                vertical-align: middle;
            .index-column
                min-width 50px
                font-weight 500
            .middle-column
                border-right 1px solid #E0DEDF
                margin-top -10px
                text-outlet
                    position relative
                    top 10px
        .summary-row
            justify-content space-between
            border-top 1px solid #E0DEDF
            .basic-data,.promo-data
                margin 10px
                .mtu-container,.expense-container
                    display inline-block
                    margin 0 15px
                    .data-heading
                        font-size 0.75rem
                        &:after
                            content ':'
                    .data-value
                        calc-outlet
                            font-size 0.75rem