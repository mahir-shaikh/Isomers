@import "../../../../assets/css/mixins"
.ds-input-field,
.btn-group
    height 100%
    width 100%
.dropdown
    &.open
        & ^[0]-menu
            // display block
            max-height 172px
            overflow auto
            min-width 100%
    &-toggle
        background-color #EBE3EF
        border 1px solid #666
        color #111
        height 100%
        width 100%
        padding 0
        padding-left 10px
        text-align left
        border-radius 0
        .dropdown-text
            width 70%
            text-overflow ellipsis
            display inline-block
            overflow hidden
            position absolute
            top 50%
            tranlateTop()
        &.btn-primary
            &:focus,
            &:active
                -webkit-box-shadow none
                box-shadow none
                border-color #6F4F7F
                background-color #6F4F7F
                color #fff
                .caret
                    color #FFF
        .caret
            position absolute
            right 5px
            display inline-block
            top 50%
            font-size 1.1em
            font-weight 800
            color #6F4F7F
            tranlateTop()
        &:after
            border 0
        &-item
            color #6D6E70

.dropdown-toggle,
.dropdown-menu    
    font-size 0.875rem

:host-context(.score-modal)
    .dropdown-toggle
        height 35px