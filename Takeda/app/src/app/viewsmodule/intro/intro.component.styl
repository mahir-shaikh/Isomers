.intro-page-wrapper
    height 80vh
    min-width 720px
    max-width 900px
    background-color rgba(255,255,255,0.8)
    margin 0
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    .row
        margin 0px
    .logout-link-container
    	text-align right
    	padding-top 10px
    	margin-right -5px
        display -webkit-box
        display -webkit-flex
        display -ms-flexbox
        display flex   
    	justify-content flex-end
    	.logout-link-icon
    		cursor pointer
    		font-size 1rem
    		color #666
    		margin-top 2px
    	.sync-container
    		display inline-block
    		padding-right 10px
    		color #666
    .intro-section
        height calc(100% - 124px)
        align-items center
    .logo-section,
    .intro-section
        .logo-container
            margin 0
            justify-content space-between
            padding 0
        .right-section
        	padding-right 0px
        .bts-logo-container
            .bts-logo
                background url("../../../../assets/images/bts-logo.svg") no-repeat
                background-size contain
                vertical-align middle
                display inline-block
                height 53px
                width 122px
                margin 20px 0px
        .takeda-logo-container
            .takeda-logo
                height 50px
                width 140px
                background url("../../../../assets/images/takeda-logo.png") no-repeat
                margin 20px 0px
        .intro-image-container
            padding-bottom 15px
            .takeda-intro-image
                height 477px
                width 336px
                background url("../../../../assets/images/intro-image.jpg") no-repeat
                background-size cover
                background-position right
                margin-left auto
        .program-title-container
            font-weight 500
            margin 30px 0
            .ProgramTitle
                color #666
                font-size 1.4375rem
                padding-bottom 10px
                text-decoration underline
            .ProgramSubTitle
                font-size 1.1875rem
                color #96A145
        .team-info
            color #666
            align-items flex-end
            .team-round-container
                margin 20px 0
            .team-name-container
                margin 10px 0
            .team-round
                border-radius 50%
                height 25px
                width 25px
                padding 0px
                display inline-block
                text-align center
                font-weight 500
                line-height 25px
                background-color #666
                calc-outlet
                    color #fff
            .team-round-title
                height 25px
                line-height 25px
                font-weight 500
                font-size 1.125rem
                padding-right 10px
            .team-name-container,.team-number-container,.team-round-container
                text-align left
                padding-left 0px
            .team-name-title,.team-number-title,.team-round-title
                padding-bottom 5px
            .button-container
                text-align left
                padding-left 0px
                .next-button
                    border-radius 0px
                    background-color #666
                    border-color #666
                    cursor pointer
                    height 35px
                    width 35px
                    display -webkit-box
                    display -webkit-flex
                    display -ms-flexbox
                    display flex
                    justify-content center
                    &:focus
                        box-shadow 0 0 0 2px #666
                        
.logout-modal
    .button-container
        padding 0 15px 10px
        text-align center
        .btn
        	cursor pointer
        .yes-button
            float left
        .no-button
            float right
        &:after
            clear both