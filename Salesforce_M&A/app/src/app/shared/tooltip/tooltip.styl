@import '../../../../assets/css/colors.styl'

.tooltip-icon
    cursor pointer
    margin-right 5px
    display inline-block
    background-color #00a1e0
    color #FFF
    border 2px solid #00a1e0
    height 20px
    width 20px
    border-radius 50%
    text-align center
    font-size 12px
    transition 0.35s all
    text-align center
    padding-top 3px
    &:hover
        background-color #FFF
        color #00a1e0
        border 2px solid #00a1e0
    .icon
        position relative
        /*top -2px*/
        font-weight 500
