.hidden
    &.active ~ .dashboard-container
        display none
.dashboard-container
    .next-round-container
        display none
    .hide-dashboard
        display initial

.dashboard-container
    .header-container
        background rgba(0,0,0,0.2)
        color #FFF
        justify-content space-between
        align-items center
        height 120px
        @media screen and (max-width 1024px)
            height 160px
        @media screen and (max-width 768px)
            height 180px
        .logo-contianer
            padding 0 15px
            display -ms-flexbox
            display flex
            align-items center
            .logo
                display inline-block
                .image
                    height 70px
                    @media screen and (max-width 768px)
                        height 50px
            .logo-text
                display inline-block
                padding 10px
                .logo-heading-text
                    display block
                    font-size 2rem
                    line-height 2rem
                    font-weight 600
                    @media screen and (max-width 768px)
                        font-size 1.5rem
                        line-height 1.5rem
                .logo-sub-heading-text
                    display block
                    font-size 1.5rem
                    line-height 1.5rem
                    @media screen and (max-width 768px)
                        font-size 1rem
                        line-height 1rem

        .metrics-contianer
            .dashboard-btn-container
                text-align right
                .next-button
                    background-color #fff
                    border-color #FFF
                    color #000
                    cursor pointer
                    .fa
                        color #EB9400
                        font-size 1.125rem
                        padding 0 5px
        .options
            text-align center
            position relative
            height 50px
            padding 15px
            .hamburger-sign
                color #FFF
                font-size 1.5rem
                display inline-block
                padding 0 10px
                cursor pointer
            .menu
                position absolute
                background-color #FFF
                min-width 100px
                font-size 0.875rem
                z-index 3
                padding 10px
                top 0
                text-align left
                -webkit-transform scaleX(0)
                transform scaleX(0)
                -webkit-transform-origin 0 0
                transform-origin 100% 0
                transition all 0.5s cubic-bezier(.5,0,.3,1)
                left -150px
                box-shadow inset 0 0 0 2px rgba(0,0,0,.15)
                &:after
                    content ''
                    height 0
                    width 0
                    border-top 15px solid transparent
                    border-bottom 15px solid transparent
                    border-left 15px solid #FFF
                    position absolute
                    right -20px
                    top 10px
                    -webkit-transform translateX(-50%)
                    transform translateX(-50%)
                &.show-menu
                    -webkit-transform scaleX(1)
                    transform scaleX(1)
                & > span
                    display block
                    padding 5px 10px
                    cursor pointer
                    color #00a1e0
                    calc-outlet
                        color #969595
                    &:hover
                        background-color #00a1e0
                        color #FFF
                        calc-outlet
                            color #FFF

.logout-modal,.submit-modal,.error-modal,.export-modal,.reset-modal
    &.modal
        .modal-dialog
            margin auto
            position absolute
            left 50%
            top 50%
            -webkit-transform translate(-50%, -50%)
            -moz-transform translate(-50%, -50%)
            -ms-transform translate(-50%, -50%)
            transform translate(-50%, -50%)
        &.show .modal-dialog
            position absolute
            left 50%
            top 50%
            -webkit-transform translate(-50%, -50%)
            -moz-transform translate(-50%, -50%)
            -ms-transform translate(-50%, -50%)
            transform translate(-50%, -50%)
    .modal-content
        border 0
        margin-left 15px
        margin-right 15px
    .modal-header
        padding 7px 15px
        background-color #504848
        color #FFF
        font-size 1.25rem
        font-weight 500
        calc-outlet
            color #FFF
            font-size 1.25rem
            font-weight 500
    .round-export-button
        margin 10px auto
        text-align center
    .button-container
        padding 0 15px 10px
        justify-content center
        .btn
            cursor pointer
            margin-left 15px
            calc-outlet
                color #fff
    .loader-container
        text-align center
        margin 10px

.password-modal
    &.modal
        .modal-dialog
            margin auto
            position absolute
            left 50%
            top 50%
            -webkit-transform translate(-50%, -50%)
            -moz-transform translate(-50%, -50%)
            -ms-transform translate(-50%, -50%)
            transform translate(-50%, -50%)
    .modal-header
        padding 15px
        background-color #504848
        color #FFF
        font-size 1.25rem
        font-weight 500
        calc-outlet
            color #FFF
            font-size 1.25rem
            font-weight 500
    .modal-body
        padding-top 0
        .info-text
            color #333
            padding 10px 0
        .error-message
            padding 10px 0
            color #F00
            font-size 0.75rem
        .title-text
            padding-bottom 5px
        .password-container
            margin-top 10px
            .password-text
                padding-bottom 5px
            input
                width 100%
                /*background-color #FFF*/
                /*color #00a1e0*/
                border 1px solid #000
                &:active,&:focus
                    /*background-color #00a1e0*/
                    /*color #fff*/
                    border 1px solid #000
    .button-container
        padding 15px
        padding-top 0
        text-align center
        .btn
            cursor pointer
            margin-left 15px
            calc-outlet
                color #fff

