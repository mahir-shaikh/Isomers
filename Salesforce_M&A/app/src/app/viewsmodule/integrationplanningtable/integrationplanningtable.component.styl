.ip-table-wrapper
    padding 10px
    padding-bottom 0
    table
        margin 0px
        thead
            th
                vertical-align middle
                text-align right
                color #ed8b00
                font-size 1rem
                font-weight 600
                border 0
                calc-outlet,text-outlet
                    font-size 1rem
                @media screen and (min-width 1025px)
                    font-size 1.125rem
                    calc-outlet,text-outlet
                        font-size 1.125rem
                &:first-child
                    text-align left
                    font-size 1.125rem
                    calc-outlet,text-outlet
                        font-size 1.125rem
        tbody
            td
                text-align right
                font-size 0.875rem
                font-weight 500
                vertical-align middle
                @media screen and (min-width 1025px)
                    font-size 1rem
                    calc-outlet,text-outlet
                        font-size 1rem
            th
                font-size 0.875rem
                @media screen and (min-width 1025px)
                    font-size 1rem
                    calc-outlet,text-outlet
                        font-size 1rem
    .scrolling
        .heading-column
            font-weight 500
            position absolute
            left 0
            width 300px
            @media screen and (max-width 768px)
                width 220px
    .outer
        position relative
    .inner
        overflow-x auto
        overflow-y visible
        margin-left 300px
        @media screen and (max-width 768px)
            margin-left 220px

    .primary-row
        .heading-column
            font-weight 600

    .secondary-row
        .heading-column
            padding-left 30px
            font-style italic
            @media screen and (max-width 768px)
                padding-left 30px

    .table-striped tbody tr:nth-of-type(odd)
        .heading-column
            background-color rgba(0,0,0,.05)

    .ip-table-container
        width 100%
        position relative
        .ip-table-title
            padding 10px 15px
            font-size 1.25rem
            background-color #fff
            cursor pointer
            @media screen and (min-width 1025px)
                font-size 1.25rem
            .title-text
                color #ed8b00
                -webkit-transition all 0.5s ease
                transition all 0.5s ease
                opacity 1
                .fa
                    color #5f5f5f
                &.hidden
                    opacity 0
        .ip-table-data
            background-color #fff
            width 100%
            max-height 700px // anything above original height
            overflow hidden
            transition all 0.5s cubic-bezier(.5,0,.3,1)
            &.hidden
                max-height 0
    .mb-10
        margin-bottom 10px

.end-padding
    height 10px
    background-color #428283
    margin-left -10px
    margin-right -10px