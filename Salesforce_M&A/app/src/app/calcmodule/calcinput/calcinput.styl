@import '../../../../assets/css/colors.styl'

input
    // background-color #D9D9D9
    border 1px solid #D9D9D9
    width 100% 
    max-width 111px
    border-radius 0
    text-align left
    font-size 0.875rem
    text-align center
    overflow hidden
    color #000
    height 25px
    line-height 25px
    cursor text
    &.read-only
        pointer-events none
        background-color #CCC
    &:active,&:focus, &:hover
        outline none
        background-color #FFF
        color #000
        box-shadow inset 0px 0px 3px #00ADEE
        border 1px solid #00ADEE
:host(.disabled)
    input
        background-color #6D6E70
        color #fff
        pointer-events none
        
:host-context(.intro-page-container)
    input
        text-align left
        padding 0 5px
        &.read-only
            background-color #fff
            color #000
            box-shadow none
            border 0px solid