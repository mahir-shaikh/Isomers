:host
    display inline-block
    width 100%
    text-align center
    
.radio-group
    position relative
    display -webkit-inline-box
    display -webkit-inline-flex
    display -ms-inline-flexbox
    display inline-flex
    vertical-align middle
    width 100%
    justify-content space-between
    .custom-radio-button
        cursor pointer
        background-color #F2F2F2
        border-radius 30px
        border 2px solid #F2F2F2
        font-weight 500
        transition all 0.5s
        font-size 0.875rem
        line-height 0.875rem
        margin 0
        box-shadow 0 1px 3px 1px #9c9c9c inset
        padding 5px 10px 10px
        @media screen and (max-width 1080px)
            font-size 0.875rem
            line-height 0.875rem
        &:hover
            background-color #CCECF9
            border-color #01A0E1
        &.checked
            color #FFF
            background #01A0E1
            border-radius 30px
            border 2px solid #01A0E1
            font-weight 500
            transition all 0.5s
            box-shadow none
[data-toggle=buttons]>.btn input[type=radio]
    position relative
    
input[type='radio']
    -webkit-appearance none
    width 20px
    height 20px
    border 1px solid #9C9C9C
    border-radius 50%
    outline none
    top 5px
    left 0
    @media screen and (max-width 1080px)
        width 15px
        height 15px

input[type='radio']:before
    content ''
    display block
    width 60%
    height 60%
    margin  20% auto    
    border-radius 50%
    background #A3A3A3

.checked
    input[type='radio']:before
        background #FFF
    input[type='radio']
        border 1px solid #FFF

.special-yes-no
    display inline-block
    background-color #F2F2F2
    border-radius 30px
    color #000
    position relative
    input[type=radio]
        position absolute
        -webkit-appearance none
        width 0
        height 0
    &.isYesSelected
        background-color #84bd00
        color #333
        .checked,.status
            color #FFF
    &.isNoSelected
        background-color #F00
        color #333
        .checked,.status
            color #FFF
    &.disabled
        background-color #000
        color #000
        pointer-events none
        .checked,.status
            color #000
    &.isYesSelected,&.isNoSelected
        &.disabled
            background-color #000
            color #000
            pointer-events none
            .checked,.status
                color #000
    .custom-radio-button
        cursor pointer
        font-weight 500
        font-size 0.875rem
        line-height 0.875rem
        margin 0
        padding 10px 20px
    .status
        position absolute
        left 50%
        top 50%
        transform translate(-50%,-50%)

:host-context(.product-focus)
    .custom-radio-button
        position relative
        .value
            display none
        &:after
            content ''
            position absolute
            left 0
            top -15px
            color #000
        &:nth-child(1)
            &:after
                content '100%'
        &:nth-child(2)
            &:after
                content ''
        &:nth-child(3)
            &:after
                content '50%/50%'
                left -15px
        &:nth-child(4)
            &:after
                content ''
        &:nth-child(5)
            &:after
                content '100%'

