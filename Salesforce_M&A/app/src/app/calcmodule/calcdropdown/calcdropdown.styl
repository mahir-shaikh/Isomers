@import "../../../../assets/css/mixins"
.ds-input-field,
.btn-group
    height 100%
    width 100%
.dropdown-item.active, .dropdown-item:active
    background-color #FFF
    color #00a1e0
.btn-primary.active, .btn-primary:active, .show > .btn-primary.dropdown-toggle
    background-color #00a1e0
    color #FFF
    .dropdown-text,.caret
        color #FFF
.dropdown
    &.open
        & ^[0]-menu
            display block
            max-height 172px
            overflow auto
            min-width 100%
    &-toggle
        cursor pointer
        background-color rgba(255,255,255,1)
        border 1px solid #00a1e0
        color #00a1e0
        height 100%
        width 100%
        padding 15px
        text-align left
        border-radius 0
        height 40px
        border-radius 30px
        &:hover, &:active
            background-color #00a1e0
            color #FFF
        .dropdown-text
            width 70%
            text-overflow ellipsis
            display inline-block
            overflow hidden
            position absolute
            top 50%
            font-weight 500
            font-size 16px
            color #00a1e0
            @media screen and (max-width 576px)
                font-size 14px
                
            tranlateTop()
        &.btn-primary
            &:focus,&:active,&:hover
                -webkit-box-shadow none
                box-shadow none
                border-color #00a1e0
                background-color #00a1e0
                color #FFF
                .dropdown-text
                    color #FFF
                .caret
                    color #FFF
        .caret
            position absolute
            right 15px
            display inline-block
            top 50%
            font-size 1.5em
            font-weight 800
            color #00a1e0
            tranlateTop()
        &:after
            border 0
        &-item
            color #6D6E70

.dropdown-toggle,
.dropdown-menu    
    font-size 0.875rem
    .dropdown-item
        padding 5px 1.5rem
        white-space normal
        -webkit-transition all 0.5s ease
        transition all 0.5s ease
        &:hover,&:focus
            background-color #00a1e0
            color #FFF
