
/* no ui slider */
.noUi
    &-target
        box-shadow none
        border none
        background-color #CFCFCF
        &^[0]-horizontal
            height 5px
        &^[0]-vertical
            width 5px
    &-horizontal &-handle
        border-radius 50%
        border none
        box-shadow 0 0 3px #333
        background #0047bb
        width 28px
        height 28px
        left -14px
        top -14px
        text-align center
        line-height 28px
        color #92c1e9
        font-size 0.625em
        cursor pointer
        transition all 0.5s ease
        &:after
            display none
        &:before
            font-family "FontAwesome"
            content "\f0c9"
            font-size: 16px
            position relative
            width 0
            left 7px
            top 0
        &:hover
            /*box-shadow 0px 0 2px 2px #92c1e9*/
            background #92c1e9
            color #0047bb

    &-pips
        height 30px
        padding 0
        
    &-marker
        &-horizontal, &-vertical
            &^[1]-normal
                display none
            &^[1]-large
                display none
            &^[1]-sub
                height 6px
                top -6px
                width 1px
                background #fff
                z-index 1
                cursor pointer
    &-value
        &-horizontal, &-vertical
            &^[1]-sub, &^[1]-large
                display none

    &-connect
        background #ed8b00
        -webkit-transition all 0.5s ease
        transition all 0.5s ease

    &-origin
        -webkit-transition all 0.5s ease
        transition all 0.5s ease