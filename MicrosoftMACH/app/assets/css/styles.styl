@import "mixins"
@import "core"
@import "nouislider"
@import "colors"

html, body
    min-height 100%
body
    // background url("../images/AutodeskBg.jpg") no-repeat
    overflow auto
    background-size cover
    font-size 16px
    font-family "OpenSans"
    line-height 20px
    color #111
    -webkit-perspective 1000px
    @media screen and (max-width 768px)
        font-size 14px
    @media screen and (max-width 576px)
        font-size 12px
.im-app
    height 100vh
    padding 0
    overflow hidden
    .main
        height 100%
        .row
            margin 0
        .container
            width calc(100% - 30px)
            max-width 960px
            margin-left 15px
            margin-right 15px
            @media screen and (min-width 992px)
                margin auto
                padding 0
                
.highcharts-container
    overflow visible !important
    svg
        overflow visible !important
