[data-toggle=buttons]>.btn input[type=radio]
    position relative
    
input[type='radio']
    -webkit-appearance none
    width 20px
    height 20px
    border 1px solid darkgray
    border-radius 50%
    outline none
    top 3px
    left 0
    @media screen and (max-width 1080px)
        width 15px
        height 15px

input[type='radio']:hover
    box-shadow 0 0 5px 0px orange inset

input[type='radio']:before
    content ''
    display block
    width 60%
    height 60%
    margin  20% auto    
    border-radius 50%    

// input[type='radio']:checked:before
//     background #000
.checked
    input[type='radio']:before
        background #000
    
:host-context(.colorOne)
    input[type='radio']
        border 1px solid $color1

    input[type='radio']:hover
        box-shadow 0 0 5px 0px $light-color1 inset  

    .checked input[type='radio']:before
        background $color1
        
    .radio-group .custom-radio-button
        &:after
            color $color1


