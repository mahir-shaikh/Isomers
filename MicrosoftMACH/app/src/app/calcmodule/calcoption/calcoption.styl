:host
    display inline-block
    width 100%
    
.radio-group
    position relative
    display -webkit-inline-box
    display -webkit-inline-flex
    display -ms-inline-flexbox
    display inline-flex
    vertical-align middle
    width 100%
    justify-content space-between
    .custom-radio-button
