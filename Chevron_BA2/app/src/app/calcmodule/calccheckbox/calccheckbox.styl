input
    width 100%
    margin auto
    -webkit-appearance none
    -moz-appearance none
    appearance none
    

.checkbox-container 
	width: 25px
	margin: 7px auto
	position: relative
	label
		cursor: pointer
		position: absolute
		width: 25px
		height: 25px
		top: 0
		left: 0
		background: #fff
		border:1px solid #6D6E70
		&:after
			opacity: 0.2
			content: ''
			position: absolute
			width: 9px
			height: 5px
			background: transparent
			top: 8px
			left: 7px
			border: 3px solid #333
			border-top: none
			border-right: none
			transform: rotate(-45deg)

.checkbox-container label:hover::after
	opacity: 0.5
	
.checkbox-container input[type=checkbox]:checked + label:after
	opacity: 1
	border 3px solid #00ADEE
	border-top none
	border-right none

.checkbox-container input[type=checkbox]:checked + label
	border 1px solid #00ADEE