@import "mixins"
@import "core"
@import "nouislider"

html, body
    min-height 100%
    overflow hidden
body
    // background url("../images/AutodeskBg.jpg") no-repeat
    overflow hidden
    background-size cover
    font-size 16px
    font-family "Gotham"
    line-height 20px
    color #111
    @media screen and (max-width 768px)
        font-size 14px
    @media screen and (max-width 576px)
        font-size 12px
.im-app
    height 100vh
    padding 0
    overflow hidden
    .main
        height 100%
        .row
            margin 0
        .container
            width calc(100% - 30px)
            max-width 960px
            margin-left 15px
            margin-right 15px
            @media screen and (min-width 992px)
                margin auto
                padding 0
                

dashboard-metrics
    .highcharts-container
        margin auto
        
bs-tooltip-container
    &.tooltip.tooltip-right
        -webkit-animation-duration 0.35s
        animation-duration 0.35s
        -webkit-animation-fill-mode both
        animation-fill-mode both
        -webkit-animation-name customSlideRight
        animation-name customSlideRight
        -webkit-transform-origin 0 0
        transform-origin 0 0
        .tooltip-inner
            text-align left
            max-width 450px
            
@keyframes customSlideRight {
    0%   {
        -webkit-transform scaleX(0)
        transform scaleX(0)
    }
    100% {
        -webkit-transform scaleX(1)
        transform scaleX(1)
    }
}

.tooltip-container
    display -webkit-box
    display -ms-flexbox
    display flex