:host
    // overflow auto
    padding 15px
    height calc(100vh - 50px)
    
.rnd-wrapper
    height 100%
    .header-wrapper
        .header-text
            text-transform uppercase
            font-weight 600
            font-size 1.5rem
            color #000
    .metric-wrapper
        background-color #00843D
        color #fff
        padding 0 30px
        margin 10px 0
        height 45px
        align-items center
        .metrics-data-row
            .metrics-data
                &-label
                    display initial
                &-value
                    font-weight 600
    .data-wrapper
        background-color #FFF
        .header-container
            font-size 1.5rem
            color #00a9e0
            padding 15px
        .data-container
            padding 15px
            .data-row
                padding 5px 0
                align-items center
                .data-label
                    color #A1A1A1
                .data-value
                    text-align center
                    color #A1A1A1
                &.header-row
                    .data-label
                        text-align center
                        color #000
                        font-weight 500
                &.primary-row
                    .data-label
                        color #000
                        font-weight 500
                    .data-value
                        color #000
        .chart-container
            padding 15px
            .chart-title
                text-align center
                color #000
                font-weight 600
    .report-wrapper
        .header-container
            font-size 1.5rem
            color #00a9e0
            padding 15px
        .report-container
            .data-row
                padding 10px 0
                border-bottom 1px solid #F1F1F1
                align-items center
                :last-child
                    border-bottom none
                .data-label
                    color #A1A1A1
                .data-value
                    text-align center
                    color #A1A1A1
                &.sub-header-row
                    margin-top 10px
                    .data-label
                        color #00a9e0
                        font-size 1rem
                        padding 0
                &.primary-row
                    .data-label
                        color #000
                        &.light
                            color #A1A1A1
                    .data-value
                        color #000
                &.secondary-row
                    .data-label
                        color #A1A1A1
                        padding-left 50px
                    .data-value
                        color #A1A1A1
                &.header-row
                    .data-label
                        text-align center
                        color #000
                        font-weight 500
        .chart-container
            padding 15px
            .chart-title
                text-align center
                color #000
                font-weight 600
                justify-content center
            .chart-data
                margin auto
    .tabset-wrapper
        height 100%
    .help-btn
        cursor pointer
        color #00a9e0
        font-size 18px
        padding 0 5px
        &:hover
            color #003a70
