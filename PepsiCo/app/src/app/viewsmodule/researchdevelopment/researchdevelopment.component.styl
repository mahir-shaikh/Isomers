.innovation-modal
    &.modal
        &.show .modal-dialog
            margin auto
            position absolute
            left 50%
            top 50%
            -webkit-transform translate(-50%, -50%)
            -moz-transform translate(-50%, -50%)
            -ms-transform translate(-50%, -50%)
            transform translate(-50%, -50%)
            pointer-events all
            background-color #FFF
            min-width 650px
    .modal-content
        max-height 80vh
    .modal-header
        padding 7px 15px
        color #00A9E0
        font-size 1.25rem
        font-weight 500
        max-height 50px
        .close-btn
            color #000
            position absolute
            transform translateY(50%)
            right 20px
            cursor pointer
    .modal-body
        height calc(100% - 50px)
        overflow-y auto
        overflow-x hidden
