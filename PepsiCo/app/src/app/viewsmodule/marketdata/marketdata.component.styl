.error-modal
    .modal-dialog
        margin auto
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%) !important
        text-align center
        width 555px
        .modal-content
            background #FFF
            height 250px
            border-radius 0
            .modal-header
                background none
                justify-content center
                .modal-title
                    color red
                    text-transform uppercase
                    .digital-ico 
                        margin-right .3em
            .modal-body
                .confirmBody
                    margin 0 20px
                    color $neutral2
            .password-container
                margin-top 10px
                .password-text
                    padding-bottom 5px
                input
                    width 100%
                    border 1px solid #000
                    &:active,&:focus
                        border 1px solid #000
                        outline-color red
            .error-message
                font-size 12px
                color red
            .button-container
                display flex
                width 100%
                position absolute
                bottom 0
                padding 0
                margin 0
                .btn 
                    flex 1
                    height 60px
                    border none
                    cursor pointer
                    border-radius 0
                    .digital-ico 
                        margin-left .3em
                .btn-danger
                    border none
                    background red /* For browsers that do not support gradients */
                    transition none
                    &:hover
                        background red