@import './colors.styl';

.highcharts-color-0
  fill darken($secondaryColor, 60%)
  stroke darken($secondaryColor, 60%)

.highcharts-color-1
  fill darken($primaryColor, 20%)
  stroke darken($primaryColor, 20%)

.highcharts-color-2
  fill $highlight2
  stroke $highlight2

.highcharts-color-3
  fill $btsred
  stroke $btsred

.highcharts-color-4
  fill $btsnavy
  stroke $btsnavy

.highcharts-color-5
  fill $highlight1
  stroke $highlight1

.highcharts-color-6
  fill $primaryColor
  stroke $primaryColor

.highcharts-color-7
  fill $secondaryColor
  stroke $secondaryColor

.highcharts-color-8
  fill darken($primaryColor, 60%)
  stroke darken($primaryColor, 60%)

.highcharts-color-9
  fill darken($primaryColor, 60%)
  stroke darken($primaryColor, 60%)

.highcharts-color-10
  fill darken($highlight1, 40%)
  stroke darken($highlight1, 40%)

.highcharts-color-11
  fill darken($secondaryColor, 20%)
  stroke darken($secondaryColor, 20%)