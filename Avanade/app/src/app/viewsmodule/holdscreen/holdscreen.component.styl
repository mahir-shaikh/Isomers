:host
    height calc(100vh - 35px)
    overflow auto
    display block
    background url('../../../../assets/images/hold_bg.png')
    background-size 100% 100%
    background-repeat no-repeat
    @media screen and (max-width 1024px)
        background-size cover
.holdscreen-wrapper
    color #fff
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)
    -moz-transform translate(-50%,-50%)
    -ms-transform translate(-50%,-50%)
    -webkit-transform translate(-50%,-50%)
    text-align center
    .team-info
        font-size 2rem
        font-weight 500
        text-transform uppercase
    .lock-screen-icon-container
        .lock-icon
            font-size 32px
            border 5px solid #fff
            display inline-block
            padding 20px 30px
            border-radius 50%
            margin 25px 0px
            background-color #681C01
    .proceed-text-container
        .password-container
            padding 10px 0
            .icon
                margin 5px 10px
            input
                background transparent
                color #fff
                border none
                border-bottom 1px solid #fff
                outline none
                min-width 250px
                &::placeholder
                    color #fff
                    font-size 12px
        .error-message
            font-size 12px
            color #ccc
        .button-container
            padding 10px 0
            .submit-btn
                background-color #E0AA06
                border 3px solid #FFCA31
                cursor pointer
                text-transform uppercase
                border-radius 20px
                &:hover
                    background-color #FFCA31
                &.disabled
                    pointer-events none
                    

input
    &:-webkit-input-placeholder
        color #fff
        font-size 12px
    &:-moz-placeholder
        color #fff
        font-size 12px
    &:-ms-input-placeholder
        color #fff
        font-size 12px
    &:-moz-placeholder
        color #fff
        font-size 12px
        
.import-success-modal
    top 20%
    .button-container
        margin auto
        padding 10px
        .btn
            cursor pointer
            border-radius 0
            calc-outlet
                color #FFF