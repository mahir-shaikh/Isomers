.intro-page-wrapper
    height calc(100vh - 35px)
    width 100vw
    background url('../../../../assets/images/hold_bg.png')
    background-size 100% 100%
    background-repeat no-repeat
    @media screen and (max-width 1024px)
        background-size cover
    .intro-page-container
        width 350px
        position absolute
        left 50%
        top 50%
        -webkit-transform translate(-50%,-50%)
        transform translate(-50%,-50%)
        .logo-container
            margin-bottom 30px
            text-align center
            padding 10px
            background rgba(255,255,255,0.7)
            box-shadow 0px 0px 5px 4px #ccc
            display none
            .logo
                height 50px
        .data-container
            background #FFF
            box-shadow 0px 0px 5px 4px #ccc
            .text-intro-info
                padding 15px
                .program-title-container
                    text-align center
                    calc-outlet,text-outlet
                        font-size 1.5rem
                        line-height 1.5rem
                        color #777
            .program-roundinfo-container
                padding 15px
                .teamno-container,.round-container,.teamname-container
                    align-items center
	                .data-label,.data-value
	                    padding 5px 0
	                    display inline-block
            .button
                text-align center
                padding 20px
                background #EFEFEF
                color #777
                cursor pointer