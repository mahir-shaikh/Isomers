:host
    height calc(100vh - 135px)
    overflow auto
    display block
.pnl-page-container
    .header-container
        padding 20px
        background #7B8C9D
        border-radius 50px
        color #fff
        box-shadow 0px 3px 3px 2px #e1dbdb
        border-top 10px solid #fff
        position fixed
        width inherit
        max-width 1200px
        z-index 3
        @media screen and (max-width 768px)
            max-width 700px
        .header-icon
            font-size 1.325rem
            padding-right 5px
        .header-text,.header-sub-text
            font-size 1.325rem
            calc-outlet, text-outlet
                font-size 1.325rem
        .header-text
            font-weight 500
    .data-wrapper
        padding-top 100px
    .data-container
        .data-row
            padding 10px 0
            align-items center
            border-bottom 1px solid rgba(204, 204, 204, 0.2)
            .data-label
                text-align left
                font-size 1.125rem
                calc-outlet,text-outlet
                    font-size 1.125rem
            .data-value
                text-align center
                font-size 1.125rem
                calc-outlet,text-outlet
                    font-size 1.125rem
        .secondary-row
            .data-label
                color rgba(123, 140, 157, 0.5)
                font-style italic
                padding-left 25px
            .data-value
                color rgba(123, 140, 157, 0.5)
        .total-row
            margin-bottom 25px !important
            .data-label
                font-weight 500
                