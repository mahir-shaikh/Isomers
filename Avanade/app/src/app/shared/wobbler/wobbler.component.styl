@import '../../../../assets/css/colors.styl'

.wobbler-modal
    overflow auto
    background url('../../../../assets/images/wobbler_bg.png') no-repeat
    background-size 100% 100%
    .button-container
        padding 10px
        text-align center
    .wobbler-narrative
        margin-bottom 40px
    .btn-primary
        width 100%
        text-align left
        padding 10px
        margin-bottom 10px
        color #6D747E
        background-color #F2F2F2
        border none
        box-shadow 7px 7px 15px 0px rgba(0,0,0,0.2)
        white-space normal
        cursor pointer
        &:hover
            box-shadow 7px 7px 15px 0px rgba(0,0,0,0.5)
        .choice-label
            // padding-left 20px
            font-weight 500
            font-size 20px
        .choice-txt
            p
                padding-left 30px
                padding-top 10px
        .choice-icon
            font-size 20px
            margin-right 10px
        &.highlighted
            background #ECF0F1
            box-shadow 7px 7px 15px 0px rgba(0,0,0,0.5)
            .choice-icon,.choice-label
                color #FF6633
        &.disabled
            box-shadow none
            cursor default
    .continue-btn
        outline none
        margin 10px
        text-transform uppercase
        text-align center
        color #fff
        letter-spacing 1px
        cursor pointer
        transition none
        box-shadow initial
        background #D30000 /* For browsers that do not support gradients */
        background -webkit-linear-gradient(#D30000, #D80365) /* For Safari 5.1 to 6.0 */
        background -o-linear-gradient(#D30000, #D80365) /* For Opera 11.1 to 12.0 */
        background -moz-linear-gradient(#D30000, #D80365) /* For Firefox 3.6 to 15 */
        background linear-gradient(#D30000, #D80365) /* Standard syntax (must be last) */
        border-radius 0
        &:hover
            background #D80365
        &.disabled
            opacity 0.5
            cursor default
            pointer-events none
    .submit-btn-container
        margin auto
    .submit-btn
        text-transform uppercase
        text-align center
        color #fff
        letter-spacing 1px
        cursor pointer
        transition none
        box-shadow initial
        border-radius 30px
        position relative
        top -20px
        z-index 1
        border 3px solid #FFCA31
        background #fff
        color #FFCA31
        z-index 1
        opacity 1
        &:hover
            background #FFCA31
            color #FFF
        &.disabled
            opacity 0.5
            border-color #ccc
            color #ccc
            cursor default
            pointer-events none
    .wobbler-feedback
        // margin-top 20px
        text-align center
        .wobbler-fb-title
            margin 10px
            margin-bottom 0
            color #fff
            border-radius 30px
            min-height 50px
            text-align center
            position relative
            background #FF4A00 /* For browsers that do not support gradients */    
            background -webkit-linear-gradient(left, #D80365 , #FF4A00) /* For Safari 5.1 to 6.0 */
            background -o-linear-gradient(right, #D80365, #FF4A00) /* For Opera 11.1 to 12.0 */
            background -moz-linear-gradient(right, #D80365, #FF4A00) /* For Firefox 3.6 to 15 */
            background linear-gradient(to right, #D80365 , #FF4A00) /* Standard syntax (must be last) */
            &-text
                padding 5px
                font-size 12px
                .bold
                    font-weight 500
                    font-size 16px
            .review-btn-container
                background rgba(0,0,0,0.5)
                position absolute
                padding 15px
                right 0
                float right
                top 0
                border-radius 30px
                height 100%
                cursor pointer
                display flex
                align-items center
        .wobbler-feedback-txt
            padding 20px
            text-align left
            display inherit
            margin-bottom 20px
            margin 30px
            margin-top 0
            background #f2f2f2
        .btn-close
            margin 0 auto
            display inherit
            position relative
            text-align center
            background none
            white-space initial
            cursor pointer
            .close-btn-txt
                color $gray3
            &:hover
                .close-ico
                    transform scale(1.2)

.highlighted
    background-color #FF0000
.disabled
    background-color #999999
    cursor default
.disabledText
    color $color1    
.hidden
    display none !important
    
.modal-content
    border none
    // border-radius 20px
    .modal-header
        display block
        border none
        margin 0
        padding 10px
        color #FF6633
        text-align center
        .modal-title
            // color #fff
            font-weight normal
        .close-btn-container
            padding 5px 9px
            position absolute
            top 0
            right -50px
            background #6D747E
            border 3px solid #FFF
            border-radius 50%
            cursor pointer
            color #FFF
    .modal-body
        margin 0
        padding 0
        max-height calc(100vh - 150px)
        overflow auto
        .tab1
            // overflow auto
            display flex
            flex-direction column
        .toggle-qst-body
            padding 10px
    .button-wrapper
        padding 10
        background-color #f2f2f2
        overflow auto
        .yes-button
            border-radius 0
            color #FFF
            cursor pointer
            background #01426A !important
            &:hover
                background #3271B4 !important

.modal-backdrop.fade.in.show
    opacity 0.8 !important
    
.wobbler-modal
    .modal-dialog
        // position absolute
        // top 50%
        // left 50%
        // transform translate(-50%,-50%)
        // -webkit-transform translate(-50%,-50%)
        // -o-transform translate(-50%,-50%)
        // margin 0
        margin 30px auto
        max-height 90vh
        width 90vw
        max-width 900px
.review-modal
    background rgba(0,0,0,0.7)
    

[data-toggle=buttons]>.btn input[type=radio]
    position relative
    
input[type='radio']
    -webkit-appearance none
    width 20px
    height 20px
    border 1px solid darkgray
    border-radius 50%
    outline none
    top 3px
    left -5px

input[type='radio']:hover
    box-shadow 0 0 5px 0px $light-color1 inset

input[type='radio']:before
    content ''
    display block
    width 60%
    height 60%
    margin  20% auto    
    border-radius 50%    

input[type='radio']:checked:before
    background $color1
    
.wobbler-alert
    height 152px
    top 265px
    padding 0 0 200px 0
    text-outlet
        text-align center
    .event-decide
        right 310px
        
.review-wrapper
    max-height 80vh
    overflow auto
    .scenarioText
        padding 25px
    .choice-btn-container
        position relative
        text-align center
        // top 20px
        transform translateY(50%)
        -webkit-transform translateY(50%)
        -moz-transform translateY(50%)
        -o-transform translateY(50%)
        .choice
            .event-choice
                border 3px solid #7b8c9d
                padding 5px 20px
                margin 5px 15px
                border-radius 20px
                cursor pointer
                background-color #FFF
                &:hover
                    color #ff6633
                    border-color #ff6633
            &.active
                .event-choice
                    background-color #ff6633
                    border-color #ff6633
                    color #FFF
                    &:hover
                        background-color #ff6633
                        border-color #ff6633
                        color #FFF
    .eventBody-container
        .alternative-section
            text-align center
            color #ff6633
            background #F2F2F2
            padding 10px 0
            padding-top 50px
        .narrative-section
            padding 25px
            background #f2f2f2
        .feedback-section
            padding 25px
            background #6D747E
            color #fff
            h4
                text-align center