:host
    display inline-block
    width 100%
    max-width 150px
    height 40px
    background-color #FFF
    color #111
    overflow hidden
    position relative
    border 1px solid #ccc
    .stepper
        height 100%
    input
        margin-left 30px
        height 100%
        width calc(100% - 60px)
        text-align center
        color #5b5b5b
        padding-right 5px
        border none
        font-size 16px
        &:active,
        &:focus
            font-weight 600
            border 2px solid #D80365

:host(.disabled)
    background-color #6D6E70
    .stepper-button
        pointer-events none
        color #369
    
.stepper
    font-size 0.875rem
    & > *
      float left
      display inline-block
    &-button
        cursor pointer
        display inline-block
        font-size 1.125rem
        width 30px
        height 40px
        line-height 40px
        position absolute
        color #fff
        background-color #FFF
        text-align center
        &:hover, &:active
            // background-color #fff
            // color #369
        &.isActive
            color #5b5b5b
        &.disabled
            background-color #000
            color #FFF !important
            pointer-events none
    .add
        right 0
        border-left 0px
    .subtract
        left 0
        border-right 0px
    .hidden
        display none    
    .field-value
        position absolute
        z-index 1
        left 0
        top 0
        font-size 16px
        // margin-left 30px
        height 100%
        width calc(100% - 0px)
        text-align center
        color #5b5b5b
        padding-right 5px
        border none
        padding-top 10px
        display block
        background #fff